<div class="wrapper">
  <div class="container">
    <div class="tab">
      <span class="active">Login</span>
      <span>|</span>
      <span>Register</span>
    </div>
    <form action="">
      <div class="input-field">
        <input type="text" id="name" required />
        <label for="name">Email</label>
      </div>
      <div class="input-field">
        <input type="password" id="password" required />
        <label for="password">Password</label>
      </div>
      <div class="form-footer">
        <span>Forgot password?</span>
        <button>Login</button>
      </div>
    </form>
  </div>
</div>

<style>
  .wrapper {
    position: absolute;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0, 0, 0, 0.7);
  }

  .container {
    background: #fff;
    padding: 20px;
  }

  .tab {
    display: flex;
    justify-content: space-evenly;
    width: 25vw;
  }

  .tab span {
    color: #333;
    font-size: 18px;
  }

  .active {
    color: #19483a;
    font-weight: 900;
    border-bottom: 3px solid #19483a;
  }

  form {
    margin-top: 30px;
  }

  .input-field {
    position: relative;
    line-height: 44px;
    margin-top: 20px;
  }
  label {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    color: #d3d3d3;
    transition: 0.2s all;
    cursor: text;
  }
  input {
    width: 100%;
    border: 0;
    outline: 0;
    padding: 0.5rem 0;
    border-bottom: 2px solid #d3d3d3;
    box-shadow: none;
    color: #111;
  }
  input:focus,
  input:valid {
    border-color: #19483a;
  }
  input:focus ~ label,
  input:valid ~ label {
    font-size: 16px;
    font-weight: 900;
    top: -24px;
    color: #19483a;
  }

  .form-footer {
    display: flex;
    justify-content: space-between;
    margin: 14px 0;
    align-items: center;
  }

  .form-footer span {
    color: #19483a;
    font-size: 15px;
  }

  .form-footer button {
    padding: 8px 30px;
    border-radius: 20px;
    background: #19483a;
    color: #fff;
    font-weight: 900;
  }
</style>
